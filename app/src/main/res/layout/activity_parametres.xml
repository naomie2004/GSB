<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include layout="@layout/entete"></include>

    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Paramètres"
        android:textColor="#2E41AA"
        android:textSize="20sp"
         />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:padding="8dp"
        android:text="Email :"
        android:textColor="#0A0A0B"
        android:textSize="15sp"></TextView>

    <EditText
        android:id="@+id/main_edittext_quantite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#2E41AA"
        android:hint="Ex: sarah@gmail.com"
        android:inputType="textEmailAddress"
        tools:ignore="TouchTargetSizeCheck">

    </EditText>
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:padding="8dp"
        android:text="Code du visiteur : "
        android:textColor="#0A0A0B"
        android:textSize="15sp"
         />

    <EditText
        android:id="@+id/main_edittext_prenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#2E41AA"
        android:hint="Ex: 12345"
        tools:ignore="TouchTargetSizeCheck">

    </EditText>
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:padding="8dp"
        android:text="Nom :"
        android:textColor="#0A0A0B"
        android:textSize="15sp"
        />

    <EditText
        android:id="@+id/main_edittext_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#2E41AA"
        android:hint="Ex: Dupont"
        tools:ignore="TouchTargetSizeCheck">

    </EditText>
    <TextView
        android:id="@+id/main_textview_mdp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:padding="8dp"
        android:text="Prénom :"
        android:textColor="#0A0A0B"
        android:textSize="15sp"
         />

    <EditText
        android:id="@+id/main_edittext_mdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#2E41AA"
        android:hint="Sarah"
        tools:ignore="TouchTargetSizeCheck">

    </EditText>
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:padding="8dp"
        android:text="URL serveur :"
        android:textColor="#0A0A0B"
        android:textSize="15sp"
        />

    <EditText
        android:id="@+id/main_edittext_cv"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#2E41AA"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"></EditText>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:padding="8dp"
        android:text="Mot de passe :"
        android:textColor="#0A0A0B"
        android:textSize="15sp"
         />

    <EditText
        android:id="@+id/main_edittext_motdepasse"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#2E41AA"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"></EditText>

</LinearLayout>