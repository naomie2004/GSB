<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".parametres">

    <include layout="@layout/entete"/>

    <TextView
        android:labelFor="@+id/TV_Parametres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="80dp"
        android:text="Parametres"
        android:textColor="#0D3C0D"
        android:textSize="40dp" />

    <TextView
        android:labelFor="@+id/TV_E_mail3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="E-mail"
        android:textColor="#243103"
        android:textSize="19dp" />
    <EditText
        android:id="@+id/EMAIL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:background="#E9FDB7"
        android:hint=""
        android:textColor="#2E41AA" />
    <TextView
        android:labelFor="@+id/codev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Code Visiteur :"
        android:textColor="#243103"
        android:textSize="19dp" />
    <EditText
        android:id="@+id/CODEV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:background="#E9FDB7"
        android:hint=""
        android:textColor="#2E41AA" />

    <TextView
        android:labelFor="@+id/TV_Nom2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Nom :"
        android:textColor="#243103"
        android:textSize="19dp" />
    <EditText
        android:id="@+id/NOM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:background="#E9FDB7"
        android:hint=""
        android:textColor="#2E41AA" />
    <TextView
        android:labelFor="@+id/TV_Prenom2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Prenom :"
        android:textColor="#243103"
        android:textSize="19dp" />
    <EditText
        android:id="@+id/PRENOM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:background="#E9FDB7"
        android:hint=""
        android:textColor="#2E41AA" />
    <TextView
        android:labelFor="@+id/TV_Url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Url"
        android:textColor="#243103"
        android:textSize="19dp" />
    <EditText
        android:id="@+id/URLSERVEUR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:background="#E9FDB7"
        android:hint=""
        android:textColor="#2E41AA" />



    <Button
        android:id="@+id/boutonconfirmer"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:backgroundTint="#2E41AA"
        android:fontFamily="sans-serif-black"
        android:text="Confirmer"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:onClick="MonClickParam" />

</LinearLayout>