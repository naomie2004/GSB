<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include layout="@layout/entete"></include>
    <TextView
        android:id="@+id/main_textview_sinscrire"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="S'inscrire"
        android:textColor="#2E41AA"
        android:textSize="30sp"
         />
    <TextView
        android:labelFor="@+id/nom"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:padding="8dp"
        android:text="Nom :"
        android:textColor="#0A0A0B"
        android:textSize="15sp"
        />

    <EditText
        android:id="@+id/nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#2E41AA"
        android:hint="Ex: Dupont"
        tools:ignore="TouchTargetSizeCheck">

    </EditText>
    <TextView
        android:labelFor="@+id/prenom"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:padding="8dp"
        android:text="Prénom :"
        android:textColor="#0A0A0B"
        android:textSize="15sp"
        />

    <EditText
        android:id="@+id/prenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#2E41AA"
        android:hint="Ex: Sarah"
        tools:ignore="TouchTargetSizeCheck">

    </EditText>
    <TextView
        android:labelFor="@+id/email"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:padding="8dp"
        android:text="Email :"
        android:textColor="#0A0A0B"
        android:textSize="15sp"
         />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#2E41AA"
        android:hint="Ex: sarah@gmail.com"
        tools:ignore="TouchTargetSizeCheck">

    </EditText>
    <TextView
        android:labelFor="@+id/mdp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:padding="8dp"
        android:text="Mot de passe :"
        android:textColor="#0A0A0B"
        android:textSize="15sp"
         />

    <EditText
        android:id="@+id/mdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#2E41AA"
        android:hint="ooooooo"
        tools:ignore="TouchTargetSizeCheck">

    </EditText>
    <TextView
        android:labelFor="@+id/cv"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:padding="8dp"
        android:text="Code visiteur:"
        android:textColor="#0A0A0B"
        android:textSize="15sp"
        />

    <EditText
        android:id="@+id/cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#2E41AA"
        android:hint="Ex: 123456"
        tools:ignore="TouchTargetSizeCheck">

    </EditText>

    <Button
        android:id="@+id/dejacompte"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="sans-serif-black"
        android:text="Vous avez déjà un compte ? Cliquez ici"
        android:textColor="#2E41AA"
        android:textSize="12sp">

    </Button>

    <Button
        android:id="@+id/sinscrire"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:backgroundTint="#2E41AA"
        android:fontFamily="sans-serif-black"
        android:text="S'inscrire"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        tools:ignore="TouchTargetSizeCheck">

    </Button>


</LinearLayout>